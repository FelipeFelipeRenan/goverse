{
    "swagger": "2.0",
    "info": {
        "description": "Documentação unificada dos microsserviços do Goverse.",
        "title": "Goverse API (Unificada)",
        "termsOfService": "http://swagger.io/terms/",
        "contact": {
            "name": "Felipe Renan",
            "email": "feliperenanqwerty@gmail.com"
        },
        "license": {
            "name": "Apache 2.0",
            "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
        },
        "version": "1.0"
    },
    "host": "localhost",
    "basePath": "/",
    "paths": {
        "/auth/login": {
            "post": {
                "description": "Realiza login com email e senha. Salva os cookies 'access_token' (HttpOnly) e 'csrf_token' (JS-readable) no navegador.",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Auth"
                ],
                "summary": "Login (Obter Cookies)",
                "parameters": [
                    {
                        "description": "Credenciais de login",
                        "name": "request",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/doc_generators.LoginRequest"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Retorna o usuário e o token CSRF",
                        "schema": {
                            "$ref": "#/definitions/doc_generators.LoginResponse"
                        }
                    },
                    "401": {
                        "description": "Credenciais inválidas",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "/auth/logout": {
            "post": {
                "security": [
                    {
                        "CookieAuth, CsrfAuth": []
                    }
                ],
                "description": "Limpa os cookies 'access_token' and 'csrf_token' do navegador.",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Auth"
                ],
                "summary": "Logout (Limpar Cookies)",
                "responses": {
                    "200": {
                        "description": "Logout bem-sucedido",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "/auth/me": {
            "get": {
                "security": [
                    {
                        "CookieAuth": []
                    }
                ],
                "description": "Retorna os dados do usuário associado ao cookie 'access_token'.",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Auth"
                ],
                "summary": "Obter dados do usuário logado",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/doc_generators.UserResponse"
                        }
                    },
                    "401": {
                        "description": "Não autorizado",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "/rooms": {
            "get": {
                "description": "Retorna uma lista de salas. Por padrão, apenas salas públicas.",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Room"
                ],
                "summary": "Listar salas (Público)",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/doc_generators.RoomResponse"
                            }
                        }
                    }
                }
            },
            "post": {
                "security": [
                    {
                        "CookieAuth, CsrfAuth": []
                    }
                ],
                "description": "Cria uma nova sala. O usuário logado será o 'owner'.",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Room"
                ],
                "summary": "Criar nova sala",
                "parameters": [
                    {
                        "description": "Dados da nova sala",
                        "name": "room",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/doc_generators.CreateRoomRequest"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Created",
                        "schema": {
                            "$ref": "#/definitions/doc_generators.RoomResponse"
                        }
                    },
                    "400": {
                        "description": "Dados inválidos",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "/rooms/mine": {
            "get": {
                "security": [
                    {
                        "CookieAuth": []
                    }
                ],
                "description": "Retorna todas as salas onde o usuário logado é o proprietário.",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Room"
                ],
                "summary": "Listar minhas salas (criadas por mim)",
                "responses": {
                    "200": {
                        "description": "Lista de salas",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/doc_generators.RoomResponse"
                            }
                        }
                    },
                    "401": {
                        "description": "Não autorizado",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "/rooms/{id}": {
            "get": {
                "security": [
                    {
                        "CookieAuth": []
                    }
                ],
                "description": "Retorna detalhes de uma sala específica. Requer autenticação.",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Room"
                ],
                "summary": "Buscar sala por ID",
                "parameters": [
                    {
                        "type": "string",
                        "format": "uuid",
                        "description": "ID da sala (UUID)",
                        "name": "id",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/doc_generators.RoomResponse"
                        }
                    },
                    "404": {
                        "description": "Sala não encontrada",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            },
            "delete": {
                "security": [
                    {
                        "CookieAuth, CsrfAuth": []
                    }
                ],
                "description": "Exclui uma sala. Requer ser o 'owner' da sala.",
                "tags": [
                    "Room"
                ],
                "summary": "Excluir sala",
                "parameters": [
                    {
                        "type": "string",
                        "format": "uuid",
                        "description": "ID da sala (UUID)",
                        "name": "id",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "204": {
                        "description": "Sala excluída",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "404": {
                        "description": "Sala não encontrada",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            },
            "patch": {
                "security": [
                    {
                        "CookieAuth, CsrfAuth": []
                    }
                ],
                "description": "Atualiza os dados de uma sala. Requer ser 'owner' ou 'admin' da sala.",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Room"
                ],
                "summary": "Atualizar sala",
                "parameters": [
                    {
                        "type": "string",
                        "format": "uuid",
                        "description": "ID da sala (UUID)",
                        "name": "id",
                        "in": "path",
                        "required": true
                    },
                    {
                        "description": "Dados atualizados da sala",
                        "name": "room",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/doc_generators.UpdateRoomRequest"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/doc_generators.RoomResponse"
                        }
                    },
                    "400": {
                        "description": "Dados inválidos",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "/rooms/{roomID}/join": {
            "post": {
                "security": [
                    {
                        "CookieAuth, CsrfAuth": []
                    }
                ],
                "description": "Entra em uma sala pública.",
                "tags": [
                    "Member"
                ],
                "summary": "Entrar em uma sala",
                "parameters": [
                    {
                        "type": "string",
                        "format": "uuid",
                        "description": "ID da sala (UUID)",
                        "name": "roomID",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Entrada bem-sucedida",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "403": {
                        "description": "Acesso negado (ex: sala privada)",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "/rooms/{roomID}/members": {
            "get": {
                "security": [
                    {
                        "CookieAuth": []
                    }
                ],
                "description": "Retorna a lista de usuários em uma sala específica.",
                "tags": [
                    "Member"
                ],
                "summary": "Listar membros da sala",
                "parameters": [
                    {
                        "type": "string",
                        "format": "uuid",
                        "description": "ID da sala (UUID)",
                        "name": "roomID",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/doc_generators.MemberWithUser"
                            }
                        }
                    }
                }
            },
            "post": {
                "security": [
                    {
                        "CookieAuth, CsrfAuth": []
                    }
                ],
                "description": "Adiciona um usuário a uma sala. Requer ser 'owner' ou 'admin' da sala.",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Member"
                ],
                "summary": "Adicionar membro à sala",
                "parameters": [
                    {
                        "type": "string",
                        "format": "uuid",
                        "description": "ID da sala (UUID)",
                        "name": "roomID",
                        "in": "path",
                        "required": true
                    },
                    {
                        "description": "Dados do membro",
                        "name": "member",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/doc_generators.AddMemberRequest"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Created",
                        "schema": {
                            "$ref": "#/definitions/doc_generators.MemberWithUser"
                        }
                    },
                    "400": {
                        "description": "Dados inválidos",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "/rooms/{roomID}/members/{memberID}": {
            "delete": {
                "security": [
                    {
                        "CookieAuth, CsrfAuth": []
                    }
                ],
                "description": "Remove um usuário da sala. Requer ser 'owner'/'admin', ou o próprio usuário.",
                "tags": [
                    "Member"
                ],
                "summary": "Remover membro da sala",
                "parameters": [
                    {
                        "type": "string",
                        "format": "uuid",
                        "description": "ID da sala (UUID)",
                        "name": "roomID",
                        "in": "path",
                        "required": true
                    },
                    {
                        "type": "string",
                        "format": "uuid",
                        "description": "ID do usuário (UUID)",
                        "name": "memberID",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "204": {
                        "description": "Removido com sucesso",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "/rooms/{roomID}/members/{memberID}/role": {
            "put": {
                "security": [
                    {
                        "CookieAuth, CsrfAuth": []
                    }
                ],
                "description": "Atualiza o 'role' de um membro na sala. Requer ser 'owner' ou 'admin'.",
                "consumes": [
                    "application/json"
                ],
                "tags": [
                    "Member"
                ],
                "summary": "Atualizar papel do membro",
                "parameters": [
                    {
                        "type": "string",
                        "format": "uuid",
                        "description": "ID da sala (UUID)",
                        "name": "roomID",
                        "in": "path",
                        "required": true
                    },
                    {
                        "type": "string",
                        "format": "uuid",
                        "description": "ID do usuário (UUID)",
                        "name": "memberID",
                        "in": "path",
                        "required": true
                    },
                    {
                        "description": "Novo papel",
                        "name": "request",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/doc_generators.UpdateRoleRequest"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/doc_generators.MemberWithUser"
                        }
                    }
                }
            }
        },
        "/user": {
            "post": {
                "description": "Rota pública para registrar um novo usuário no sistema.",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "User"
                ],
                "summary": "Criar novo usuário (Público)",
                "parameters": [
                    {
                        "description": "Dados do novo usuário",
                        "name": "user",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/doc_generators.CreateUserRequest"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Created",
                        "schema": {
                            "$ref": "#/definitions/doc_generators.UserResponse"
                        }
                    },
                    "400": {
                        "description": "Dados inválidos",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "/user/me": {
            "put": {
                "security": [
                    {
                        "CookieAuth, CsrfAuth": []
                    }
                ],
                "description": "Atualiza o 'username' ou 'picture' do usuário autenticado.",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "User"
                ],
                "summary": "Atualizar o usuário logado",
                "parameters": [
                    {
                        "description": "Dados do usuário para atualizar",
                        "name": "input",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/doc_generators.UpdateUserRequest"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/doc_generators.UserResponse"
                        }
                    },
                    "400": {
                        "description": "Requisição inválida",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "401": {
                        "description": "Não autorizado",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            },
            "delete": {
                "security": [
                    {
                        "CookieAuth, CsrfAuth": []
                    }
                ],
                "description": "Realiza um 'soft delete' no usuário autenticado.",
                "tags": [
                    "User"
                ],
                "summary": "Deletar o usuário logado",
                "responses": {
                    "204": {
                        "description": "Usuário deletado com sucesso",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "401": {
                        "description": "Não autorizado",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "/user/rooms": {
            "get": {
                "security": [
                    {
                        "CookieAuth": []
                    }
                ],
                "description": "Retorna todas as salas das quais o usuário logado é membro.",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Room"
                ],
                "summary": "Listar salas que eu participo",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/doc_generators.RoomResponse"
                            }
                        }
                    },
                    "401": {
                        "description": "Não autorizado",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "/users": {
            "get": {
                "description": "Rota pública que retorna uma lista de todos os usuários.",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "User"
                ],
                "summary": "Listar todos os usuários (Público)",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/doc_generators.UserResponse"
                            }
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "doc_generators.AddMemberRequest": {
            "type": "object",
            "required": [
                "user_id"
            ],
            "properties": {
                "role": {
                    "type": "string",
                    "example": "member"
                },
                "user_id": {
                    "type": "string",
                    "example": "a0eebc99-9c0b-4ef8-bb6d-6bb9bd380a12"
                }
            }
        },
        "doc_generators.CreateRoomRequest": {
            "type": "object",
            "required": [
                "name"
            ],
            "properties": {
                "description": {
                    "type": "string",
                    "example": "Sala para jogar."
                },
                "is_public": {
                    "type": "boolean",
                    "example": true
                },
                "max_members": {
                    "type": "integer",
                    "example": 50
                },
                "name": {
                    "type": "string",
                    "example": "Minha Sala de Jogos"
                }
            }
        },
        "doc_generators.CreateUserRequest": {
            "type": "object",
            "properties": {
                "email": {
                    "type": "string",
                    "example": "novo@email.com"
                },
                "password": {
                    "type": "string",
                    "example": "senha123"
                },
                "username": {
                    "type": "string",
                    "example": "novo_usuario"
                }
            }
        },
        "doc_generators.LoginRequest": {
            "type": "object",
            "properties": {
                "email": {
                    "type": "string",
                    "example": "admin@goverse.com"
                },
                "password": {
                    "type": "string",
                    "example": "senha123"
                },
                "type": {
                    "type": "string",
                    "example": "password"
                }
            }
        },
        "doc_generators.LoginResponse": {
            "type": "object",
            "properties": {
                "csrf_token": {
                    "type": "string",
                    "example": "a1b2c3d4-..."
                },
                "user": {
                    "$ref": "#/definitions/doc_generators.UserResponse"
                }
            }
        },
        "doc_generators.MemberWithUser": {
            "type": "object",
            "properties": {
                "joined_at": {
                    "type": "string"
                },
                "role": {
                    "type": "string",
                    "example": "owner"
                },
                "room_id": {
                    "type": "string",
                    "example": "c0eebc99-9c0b-4ef8-bb6d-6bb9bd380b11"
                },
                "user": {
                    "$ref": "#/definitions/doc_generators.UserResponse"
                }
            }
        },
        "doc_generators.RoomResponse": {
            "type": "object",
            "properties": {
                "created_at": {
                    "type": "string"
                },
                "description": {
                    "type": "string",
                    "example": "Sala pública para todos."
                },
                "id": {
                    "type": "string",
                    "example": "c0eebc99-9c0b-4ef8-bb6d-6bb9bd380b11"
                },
                "is_public": {
                    "type": "boolean",
                    "example": true
                },
                "max_members": {
                    "type": "integer",
                    "example": 100
                },
                "member_count": {
                    "type": "integer",
                    "example": 1
                },
                "name": {
                    "type": "string",
                    "example": "Sala Geral"
                },
                "owner_id": {
                    "type": "string",
                    "example": "a0eebc99-9c0b-4ef8-bb6d-6bb9bd380a11"
                },
                "updated_at": {
                    "type": "string"
                }
            }
        },
        "doc_generators.UpdateRoleRequest": {
            "type": "object",
            "required": [
                "new_role"
            ],
            "properties": {
                "new_role": {
                    "type": "string",
                    "example": "admin"
                }
            }
        },
        "doc_generators.UpdateRoomRequest": {
            "type": "object",
            "properties": {
                "description": {
                    "type": "string",
                    "example": "Novo foco."
                },
                "is_public": {
                    "type": "boolean",
                    "example": false
                },
                "max_members": {
                    "type": "integer",
                    "example": 10
                },
                "name": {
                    "type": "string",
                    "example": "Sala de Estudos"
                }
            }
        },
        "doc_generators.UpdateUserRequest": {
            "type": "object",
            "properties": {
                "picture": {
                    "type": "string",
                    "example": "http://.../img.png"
                },
                "username": {
                    "type": "string",
                    "example": "Novo Nome"
                }
            }
        },
        "doc_generators.UserResponse": {
            "type": "object",
            "properties": {
                "created_at": {
                    "type": "string"
                },
                "email": {
                    "type": "string",
                    "example": "admin@goverse.com"
                },
                "id": {
                    "type": "string",
                    "example": "a0eebc99-9c0b-4ef8-bb6d-6bb9bd380a11"
                },
                "is_oauth": {
                    "type": "boolean"
                },
                "picture": {
                    "type": "string"
                },
                "username": {
                    "type": "string",
                    "example": "Admin Goverse"
                }
            }
        }
    },
    "securityDefinitions": {
        "CookieAuth": {
            "description": "Cookie de autenticação HttpOnly (obtido via /auth/login)",
            "type": "apiKey",
            "name": "access_token",
            "in": "cookie"
        },
        "CsrfAuth": {
            "description": "Token CSRF (obtido via /auth/login, necessário para POST/PUT/PATCH/DELETE)",
            "type": "apiKey",
            "name": "X-CSRF-TOKEN",
            "in": "header"
        }
    }
}